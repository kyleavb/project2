<h1>Reults</h1>
<hr>
<% if(results.length > 0){ %>
  <div class="row">
  <% var counter = 0; %>
  <% results.forEach(function(result, i){ %>
    <% if(counter >= 3){ %>
      <% counter = 0; %>
      </div>
      <div class="row">
    <% } %>
    <div class="col s12 m6 l4 xl4">
      <div class="card black">
        <div class="card-image">
          <img class="white-text" src="<%= result.imageUrl %>" alt="<%= result.name %>" onerror="this.src ='/img/card_back.jpeg';">
        </div>
        <div class="card-content white-text">
          <a href="/card/<%= result.id %>">
          <span class="card-title"><%= i + 1 %>. <%= result.name %></span>
          </a>
          <p><%= result.text %></p>
        </div>
        <div class="card-action">
          <a href="#">Add to Deck</a>
          <a  class="right" href="#"><i class="material-icons">favorite</i></a>
        </div>
      </div>
    </div>
    <% counter++ %>
  <% }) %>
<% }else{ %>
  <br />
<h4 class="center">No Results Found. <a href="/search">Search Again?</a></h4>
<% } %>
