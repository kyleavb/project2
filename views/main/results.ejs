<h1>Reults</h1>
<hr>
<% if(results.length > 0){ %>
  <div class="row">
    <% results.forEach(function(result, i){ %>
      <div class="col s12 m6 l4 xl4">
        <div class="card black">
          <div class="card-image">
            <img class="white-text" src="<%= result.imageUrl %>" alt="<%= result.name %>" onerror="this.src ='/img/card_back.jpeg';" height="311" width="223">
          </div>
          <div class="desc card-content white-text">
            <a href="/card/<%= result.id %>">
            <span class="card-title"><%= i + 1 %>. <%= result.name %></span>
            </a>
            <p><%= result.text %></p>
          </div>
          <div class="card-action">
            <div class="row">
              <div class="col s4">
                <button class="btn-small" href="#">+Deck</button>
              </div>
              <div class="col s4">
                <form action="/favorite" method="POST">
                  <input type="hidden" value="<%= result.id %>" name="cardInfo">
                  <input type="hidden" value="<%= result.name %>" name="cardName">
                  <button class="btn-small right round" type="submit"><i class="material-icons">favorite</i></button>
                </form>
              </div>
              <div class="col s4">
                <a class="btn-small" href="https://shop.tcgplayer.com/magic/product/show?ProductName=<%= result.name %>">Shop</a>
              </div>

            </div>
          </div>
        </div>
      </div>
    <% }) %>
</div>
<% }else{ %>
  <br />
<h4 class="center">No Results Found. <a href="/search">Search Again?</a></h4>
<% } %>
