<h1>All Posts</h1>
<hr>
<% if(posts.length > 0){ %>
  <% posts.forEach(function(post){ %>
    <div class="row">
      <div class="col s2 ">
        <a class="addVote" data-dir="up" data-deck="<%= post.deck.id %>" href="/posts"><i class="material-icons">file_upload</i><%= post.deck.upvote %> Up</a>
        <br />
        <a class="addVote" data-dir="dn" data-deck="<%= post.deck.id %>" href="/posts"><i class="material-icons">file_download</i><%= post.deck.downvote %> Down</a>
      </div>
      <div class="col s5">
        <h5><%= post.deck.name %></h5>
        <p>Card Count: <%= post.deck.cards.length %></p>
        <p>Other cool analytics to come</p>
      </div>
      <div class="col s5">
        <div class="valign-wrapper">
          <a class="btn" href="/posts/<%= post.id %>">Review / Comment</a>
        </div>
    </div>
  <% }) %>
<% }else{ %>
  <h3 class="center">No decks posted yet</h3>
<% } %>
